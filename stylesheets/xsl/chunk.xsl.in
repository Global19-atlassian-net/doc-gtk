<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:doc="http://nwlash.com/xsl/documentation/1.0"
                version="1.0">

<xsl:import href="@DOCBOOKXSL_CHUNK@"/>
<xsl:include href="html/chunk.xsl" />
<xsl:include href="common.xsl" />
<xsl:include href="html-common.xsl" />

<xsl:output method="html" encoding="@ENCODING@"/>

<!--

   Parameters for Norman Walsh's Stylesheets to use
 
-->

<xsl:param name="toc.section.depth" doc:type="integer" 
                               doc:min="1" doc:max="2" />
<xsl:param name="generate.component.toc" select="1" />
<xsl:param name="generate.division.toc" select="1" />
<xsl:param name="default.table.width" select="100" />
<xsl:param name="base.dir" select="'build/html/'"/>
<xsl:param name="root.filename" select="'index'" />
<xsl:param name="use.id.as.filename" select="1" />
<xsl:param name="phpweb" select="0"/>
</xsl:stylesheet>
